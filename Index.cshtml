@model  IEnumerable<Loja.UI.Web.Models.PedidoViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Pedidos</h2>

<p>
    <a class="btn btn-info" href="/Pedido/Incluir">Novo...</a>
</p>

<table class="table">
    <tr>
        <th>Id</th>
        <th>Cliente</th>
        <th>Data</th>
    </tr>

    @foreach (var pedidoViewModel in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(pedidoViewModel.Id.ToString(), "Detalhes", new { id = pedidoViewModel.Id })
            </td>
            <td>
                @Html.ActionLink(pedidoViewModel.ClienteNome, "Detalhes", new { id = pedidoViewModel.Id })
            </td>
            <td>@pedidoViewModel.Data</td>
        </tr>
    }
</table>